{
  "manifest_version": 3,
  "name": "Page Highlighter MVP",
  "version": "0.1.0",
  "description": "Highlight text in multiple colors, persist per page, and print/export with highlights.",
  "permissions": ["storage", "contextMenus", "activeTab", "scripting"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Highlighter",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ]
}